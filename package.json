{
  "name": "electron-reload",
  "version": "2.0.0",
  "description": "Simplest way to reload an electron app on file changes!",
  "main": "main.js",
  "types": "main.d.ts",
  "scripts": {
    "lint": "./node_modules/.bin/standard",
    "lint:fix": "./node_modules/.bin/standard --fix",
    "build": "./node_modules/.bin/rimraf main.d.ts && npm run lint:fix && ./node_modules/.bin/tsc",
    "prepublishOnly": "npm run --silent build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yan-foto/electron-reload.git"
  },
  "keywords": [
    "electron",
    "reload",
    "auto-reload",
    "node"
  ],
  "author": "Yan Foto <yan.foto@quaintous.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yan-foto/electron-reload/issues"
  },
  "dependencies": {
    "chokidar": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "rimraf": "^3.0.2",
    "standard": "^14.3.3",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "electron": "^8.1.1"
  }
}
