    "node"
  ],
  "author": "Yan Foto <yan.foto@quaintous.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yan-foto/electron-reload/issues"
  },
  "dependencies": {
    "chokidar": "^3.0.2"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "ts-standard": "^6.0.0",
    "typescript": "^3.5.0"
  },
  "peerDependencies": {
    "electron": "^8.1.1"
  }
}
